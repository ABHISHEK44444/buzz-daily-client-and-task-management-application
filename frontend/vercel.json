{
  "version": 2,
  "headers": [
    {
      "source": "/(.*\\.tsx)",
      "headers": [
        { "key": "Content-Type", "value": "application/javascript; charset=utf-8" }
      ]
    },
    {
      "source": "/(.*\\.ts)",
      "headers": [
        { "key": "Content-Type", "value": "application/javascript; charset=utf-8" }
      ]
    }
  ],
  "builds": [
    {
      "src": "backend/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/models/**", "backend/jobs/**"]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "." }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/server.ts" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
